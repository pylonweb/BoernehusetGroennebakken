<section id="body_content">
<%= @page.content_for(:body).html_safe if @page.content_for(:body) %>



<ul id="faqs">
  <% @faqs.each do |faq| %>
    <li class="faq_question">
      <%= link_to "<span class='arrow'> &#9658; </span> #{faq.question}".html_safe, "#", :class => "roll_down_link" %> 
      <div class="faq_answer">
        <%= faq.answer.html_safe %>
      </div>
    </li>
  <% end %>
</ul>

</section>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag 'faq' %>
<% end %>

<% content_for :javascripts do %>
  <%= javascript_include_tag 'faq' %>
<% end %>